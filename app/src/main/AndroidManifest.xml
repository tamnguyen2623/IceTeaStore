<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Cấp quyền Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IceTeaStore"
        tools:targetApi="31">

        <!-- HomeActivity (Main Screen) -->
        <activity
            android:name=".views.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FavoriteActivity (Danh sách yêu thích) -->
        <activity
            android:name=".views.FavoriteActivity"
            android:exported="false"/>

        <activity
            android:name=".views.ProductManagementListActivity"
            android:exported="false"/>

        <activity
            android:name=".views.ProductManagementActivity"
            android:exported="false"/>
    </application>
</manifest>
